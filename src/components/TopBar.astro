---
import Button from "./Button.astro";

const { hasSearch } = Astro.props;
---

{hasSearch && <input type="text" />}

<header class="topbar">
  
  <div class="button-group">
    <Button variant="tertiary" size="medium">Sign up</Button>
    <Button variant="primary" size="medium">Log in</Button>
  </div>
</header>

<style>
  .topbar {
    display: flex;
    gap: var(--space-md);
    align-items: center;
    background: var(--surface-black);
    color: var(--text-white);
    padding: var(--space-md) var(--space-xl);
    height: 4rem;
  }

  menu {
    display: flex;
    gap: var(--space-md);
    list-style: none;
  }

  menu button {
    display: grid;
    place-content: center;
    width: var(--space-xl);
    height: var(--space-xl);
    border-radius: var(--border-radius-round);
    background: var(--text-black);
    color: var(--text-white);
  }

  button svg {
    width: var(--space-md);
    height: var(--space-md);
  }

  menu button[disabled] {
    cursor: not-allowed;
    opacity: 0.6;
  }

  @media (width < 1000px) {
    menu li:last-child {
      display: none;
    }
  }

  .button-group {
    flex-shrink: 0;
    margin-left: auto;
  }
</style>
